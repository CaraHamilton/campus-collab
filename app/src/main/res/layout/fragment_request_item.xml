<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/request_item"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/profile_picture" />

    <TextView
        android:id="@+id/requestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:maxWidth="150dp"
        android:text="Name is requesting to join Project Name"
        android:textColor="@color/transparent_white" />

    <ImageView
        android:id="@+id/acceptButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:clickable="true"
        app:srcCompat="@drawable/circle_check_solid" />

    <ImageView
        android:id="@+id/rejectButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:clickable="true"
        app:srcCompat="@drawable/circle_xmark_solid" />

</LinearLayout>